{% extends 'admin/base.html.twig' %}

{% block contents %}
    <div class="contents edit">

        <table class="table table-bordered table-striped">
            <tr>
                <td>
                    <label>Wine name</label>
                </td>
                <td>
                    <input type="text" value="Wine name">
                </td>
            </tr>
                <td>
                    Composition
                </td>
                <td>
                    <textarea>80% Merlot, 8% Cabernet Franc, 8% Cabernet Sauvignon, 4% Malbec</textarea>
                </td>
            </tr>
            <tr>
                <td>Method</td>
                <td>
                    <textarea>Method</textarea>
                </td>
            </tr>
            <tr>
                <td>Testing notes</td>
                <td>
                    <textarea></textarea>
                </td>
            </tr>
            <tr>
                <td>History</td>
                <td>
                    <textarea></textarea>
                </td>
            </tr>
            <tr>
                <td>Key point / Food match</td>
                <td>
                    <textarea></textarea>
                </td>
            </tr>
            <tr>
                <td>Colour</td>
                <td>
                    <select>
                        <option>Red</option>
                        <option>Rose</option>
                        <option>White</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>Vintage</td>
                <td>
                    <input type="number" />
                </td>
            </tr>
            <tr>
                <td>Wine style</td>
                <td>
                    <select>
                        <option>Sparkling</option>
                        <option>White</option>
                        <option>Rose</option>
                        <option>Red</option>
                        <option>Dessert</option>

                    </select>
                </td>
            </tr>
            <tr>
                <td>Region</td>
                <td>
                    <select id="country">
                        <option>- Country -</option>
                        {% for country in countries %}
                            <option>{{ country.name }}</option>
                        {% endfor %}
                    </select>

                    <select id="region">
                        <option>- Region -</option>
                        {% for region in regions %}
                            <option>{{ region.name }}</option>
                        {% endfor %}
                    </select>
                </td>
            </tr>
            <tr>
                <td>Show</td>
                <td>
                    <input type="checkbox" class="switch"/>
                </td>
            </tr>
        </table>
    </div>

    <div class="footer">
        <a class="btn btn-primary" href="{{ path('wine_list') }}">List</a>
        <button class="btn btn-primary">Save</button>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('vendor/bootstrap-switch-master/dist/js/bootstrap-switch.min.js') }}"></script>
    <script src="{{ asset('js/wine-form.js') }}"></script>

    <script>
        // Add switch styling to the checkbox
        $('.switch').bootstrapSwitch();

        // Initializer
        Wine.initialize();

    </script>

{% endblock %}
